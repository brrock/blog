---
layout: 'base.njk'
title: blog
---

<div class="section container">
  <h1 class="section-title">Recent Articles</h1>
  <ul class="articles_list flow" role="list">
    {%- for post in collections.post | reverse-%}
    <li>
      <article class="snippet">
        <img src="{{ post.data.image }}" alt="{{post.data.imageAlt}}" />
        <h3 class="spinnet_title"><a href="{{post.url}}">{{post.data.title}}</a></h3>
        <p class="snippet_meta">by <span>post.data.author</span></p>
        <p class="snippet__body">{{post.data.description}}</p>
        <a href="{{post.url}}" class="btn btn--primary"> Continue Reaing</a>
      </article>
    </li>
    {%-endfor-%}
  </ul>
</div>